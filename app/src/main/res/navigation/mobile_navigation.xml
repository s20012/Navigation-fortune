<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="jp.ac.it_college.s20012.test.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_to_fortune"
            app:destination="@id/fortune" />
    </fragment>

    <fragment
        android:id="@+id/fortune"
        android:name="jp.ac.it_college.s20012.test.ui.home.FortuneFragment"
        android:label="fragment_fortune"
        tools:layout="@layout/fragment_fortune">
        <action
            android:id="@+id/action_to_title"
            app:destination="@id/navigation_home" />

        <argument android:name="sign_name"  app:argType="string"/>
        <argument android:name="sign_id"  app:argType="integer" />
    </fragment>



    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="jp.ac.it_college.s20012.test.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_to_book"
            app:destination="@id/book" />
    </fragment>

    <fragment
        android:id="@+id/book"
        android:name="jp.ac.it_college.s20012.test.ui.dashboard.SignBook"
        android:label="fragment_book"
        tools:layout="@layout/fragment_sign_book">

        <argument android:name="sign_name"  app:argType="string"/>
        <argument android:name="sign_id"  app:argType="integer" />
    </fragment>

</navigation>